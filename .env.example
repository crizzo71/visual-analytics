# Red Hat SSO Configuration
RH_SSO_BASE_URL=https://sso.redhat.com
RH_SSO_REALM=redhat-external
RH_SSO_CLIENT_ID=ldap-analytics-dashboard
RH_SSO_CLIENT_SECRET=your-client-secret-here
RH_SSO_REDIRECT_URI=https://your-dashboard-domain.com/callback

# Alternative for development
# RH_SSO_BASE_URL=https://your-dev-keycloak.com
# RH_SSO_REALM=your-realm
# RH_SSO_REDIRECT_URI=http://localhost:8503/callback

# Dashboard Security
DASHBOARD_SECRET_KEY=your-secure-secret-key-change-this
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=3
ENABLE_AUDIT_LOGGING=true

# Network Security (optional)
ALLOWED_IPS=10.0.0.0/8,192.168.0.0/16
ENABLE_RATE_LIMITING=true

# LDAP Configuration
REDHAT_LDAP_CONFIG=config/my-ldap.json

# Logging
LOG_LEVEL=INFO
AUDIT_LOG_PATH=logs/audit.log